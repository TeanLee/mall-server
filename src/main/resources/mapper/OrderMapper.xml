<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.demo.mapper.OrderMapper">

    <select id="list" resultType="com.mall.demo.bean.Order">
        SELECT * FROM mall.order where uid=#{uid}
        <if test="status!=null">
            and status=#{status}
        </if>
    </select>
    <insert id="add" useGeneratedKeys="true">
<!--        insert into mall.order(orderItem, orderTime, uid, status) values(#{orderItem, jdbcType=OTHER}, #{orderTime}, #{uid}, #{status});-->
        insert into mall.order(orderItem, orderTime, uid, status) values(#{orderItem}, #{orderTime}, #{uid}, #{status});
    </insert>
    <resultMap id="allCategories" type="com.mall.demo.bean.Category">
        <id column="catagoryId" property="catagoryId" />
        <result column="category" property="category" />
        <result column="icon" property="icon" />
        <result column="color" property="color" />
        <result column="name" property="name" />
    </resultMap>
    <!--    id 要和 mapper 中声明的方法名一致，返回值类型也要和声明的类型保持一致-->
    <select id="getCategoryById" resultType="com.mall.demo.bean.Category">
        SELECT * FROM mall.category where categoryId=#{id};
    </select>
</mapper>
